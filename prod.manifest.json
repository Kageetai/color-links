{
  "manifest_version": 2,

  "name": "Color Links",
  "description": "This extension allows you to change the color of your visited links",
  "version": "0.1.4",
  "icons": {
      "16": "./images/links16.png",
      "48": "./images/links48.png",
      "128": "./images/links128.png"
  },
  "browser_action": {
    "default_popup": "./color-links.html"
  },
  "content_scripts": [
    {
      "matches": [
       "*://www.google.com/*",
       "*://www.google.com.bz/*",
       "*://www.google.co.in/*",
       "*://www.google.de/*",
       "*://www.google.fr/*",
       "*://www.google.co.uk/*",
       "*://www.google.br/*",
       "*://www.google.it/*",
       "*://www.google.com.au/*",
       "*://www.google.es/*",
       "*://www.google.pl/*",
       "*://www.google.cz/*",
       "*://www.google.nl/*"
       ],
      "css": ["./styles/links.css"],
      "js": ["./src/contentscript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}
